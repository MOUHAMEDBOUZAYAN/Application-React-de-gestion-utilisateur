# Configuration générale
NODE_ENV=development
PORT=5000
# Base de données MongoDB
MONGO_URI=mongodb://localhost:27017/auth404js
# JWT et cookies
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30
# Configuration session
USE_SESSION=false
SESSION_SECRET=your_session_secret_here
SESSION_EXPIRE=86400000
# Email configuration (Nodemailer)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASSWORD=your_mailtrap_password
SMTP_SECURE=false
FROM_NAME=404.js Auth
FROM_EMAIL=noreply@404js.com
# Twilio configuration (SMS)
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number
# URL Frontend
FRONTEND_URL=http://localhost:3000
# Configuration de sécurité supplémentaire
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=24h
EMAIL_VERIFICATION_EXPIRE=24h
PHONE_VERIFICATION_EXPIRE=10m
PASSWORD_RESET_EXPIRE=10m