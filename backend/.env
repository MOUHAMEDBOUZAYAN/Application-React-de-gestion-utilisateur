// .env avec la configuration complète pour la connexion
# .env
# Configuration complète pour le projet 404.js Auth API

# Configuration générale
NODE_ENV=development
PORT=5000

# Base de données MongoDB
MONGO_URI=mongodb://localhost:27017/auth404js

# JWT et cookies
JWT_SECRET=68fd52a86b41517b8f3a7a04b5f033c2a0b5d9e01c8a49b7a8f5d69c2e9b4f7a
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Configuration session
USE_SESSION=false
SESSION_SECRET=a4f7e9d1c2b5a8e0f3c6d9b2a5f8e1d4c7b0a3f6e9d2c5b8a1f4e7d0c3b6a9
SESSION_EXPIRE=86400000

# Email configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=votre_utilisateur_mailtrap
SMTP_PASSWORD=votre_password_mailtrap
SMTP_SECURE=false
FROM_NAME=404.js Auth
FROM_EMAIL=noreply@404js.com

# Twilio configuration (optionnel, ignoré si vide)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# URL Frontend - IMPORTANT pour CORS et redirection
FRONTEND_URL=http://localhost:3000

# Variables additionnelles
API_VERSION=2.0.0
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=24h
EMAIL_VERIFICATION_EXPIRE=24h
PHONE_VERIFICATION_EXPIRE=10m
PASSWORD_RESET_EXPIRE=10m